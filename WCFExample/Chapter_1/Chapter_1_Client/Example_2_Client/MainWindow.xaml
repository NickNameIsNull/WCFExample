<Window x:Class="Example_2_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example_2_Client"
        mc:Ignorable="d"
        Title="调用WCF服务Demo" Height="450" Width="800">
    <StackPanel Margin="15">
        <TextBlock Text="请输入数值:"/>
        <TextBox Name="txtInput" Margin="3,2,0,0" Width="100" HorizontalAlignment="Left"/>
        <Button Content="调用服务" HorizontalAlignment="Left" Margin="2,12,0,10" Padding="5,2" Click="Button_ClickAsync"/>
        <TextBlock Name="tbResult" Foreground="Red" FontSize="15" FontWeight="Bold" Margin="2,3"/>
    </StackPanel>
</Window>
